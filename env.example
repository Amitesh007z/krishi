OPENAI_API_KEY=sk-xxxx
NEXT_PUBLIC_OPENAI_API_KEY=


# Llamafile (local OpenAI-compatible server)
NEXT_PUBLIC_LLAMAFILE_BASE_URL=http://localhost:8080
NEXT_PUBLIC_LLAMAFILE_MODEL=llama-2-7b-chat
NEXT_PUBLIC_LLAMAFILE_MAX_TOKENS=200
NEXT_PUBLIC_LLAMAFILE_TEMPERATURE=0.6
NEXT_PUBLIC_LLAMAFILE_TOP_P=0.9
NEXT_PUBLIC_LLAMAFILE_TIMEOUT_MS=12000

